<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="theappfoundry.lifestyles.Geofencing"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeoFence"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"
        android:layout_marginRight="133dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="133dp" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:text="Get Location"
        android:layout_marginRight="95dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginEnd="95dp" />

    <TextView
        android:id="@+id/latText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp" />

    <TextView
        android:id="@+id/longText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/latText"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/addGeofenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Geofences"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/latText"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/addMapButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Maps"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="7dp" />


    <Button
        android:id="@+id/startGeoFencing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geofence"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/addGeofenceButton"
        android:layout_marginStart="35dp" />

    <RelativeLayout
        android:id="@+id/mapViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">

        <RelativeLayout
            android:id="@+id/rectangleLayout"
            android:layout_width="368dp"
            android:layout_height="337dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="24dp">

        </RelativeLayout>


        <Button
            android:id="@+id/confirmLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Location"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="89dp" />

        <LinearLayout
            android:id="@+id/mapLayout"
            android:layout_width="368dp"
            android:layout_height="336dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@+id/rectangleLayout"
            app:layout_constraintRight_toRightOf="@+id/rectangleLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
